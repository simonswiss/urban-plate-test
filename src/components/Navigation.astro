---
import UrbanPlateLogo from "../components/UrbanPlateLogo.astro"
const isHomepage = Astro.url.pathname === "/"
---

<header class="z-10">
  <nav
    class:list={[
      "mx-auto flex max-w-7xl px-4",
      isHomepage ? "justify-end" : "justify-between",
    ]}
  >
    {
      !isHomepage && (
        <div class="flex gap-6">
          <a href="/" class="py-6 font-semibold">
            <UrbanPlateLogo class="h-28 transition hover:-rotate-12" />
          </a>
          <a href="#" class="py-6 font-semibold">
            Browse All Recipes
          </a>
        </div>
      )
    }
    <div class="flex gap-6">
      <a href="#" class="py-6 font-semibold">The Pantry</a>
      <a href="/about" class="py-6 font-semibold">About</a>
      <a href="#" class="py-6 font-semibold">Instagram</a>
    </div>
  </nav>
</header>
